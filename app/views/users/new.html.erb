<div id="container">

<!-- THIS IS NEW VIEW FOR USER CLASS -->




	<h2> Create a new Account: </h2>


<%= form_for  @user do |usr| %>
<p>

<%= usr.label :email, "Email" %>

<%= usr.text_field :email %>

</p>



<p>

<%= usr.label :password, "Password" %>

<%= usr.text_field :password %>

</p>


<p>

<%= usr.label :password_confirmation, "Password Confirmation" %>

<%= usr.text_field :password_confirmation %>

</p>



<p>
<%= usr.submit %>
</p>


<%end%>

<hr/>

User id: <%= session[:user_id] %>

</div>

